@model TodoList.Models.TodoItem

@{
    ViewData["Title"] = "Create Task";
}

<div class="max-w-xl mx-auto mt-10 bg-gradient-to-br from-purple-100 to-white shadow-xl rounded-xl p-8">
    <h2 class="text-2xl font-bold text-purple-700 mb-6">Create New Task</h2>

    <form asp-action="Create" method="post" class="space-y-4">

        <div>
            <label asp-for="Title" class="block font-medium text-purple-800"></label>
            <input asp-for="Title" class="w-full mt-1 px-4 py-2 border border-purple-300 rounded focus:ring-2 focus:ring-purple-500 focus:outline-none" />
            <span asp-validation-for="Title" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="Category" class="block font-medium text-purple-800">Category</label>
            <input asp-for="Category" class="w-full mt-1 px-4 py-2 border border-purple-300 rounded focus:ring-2 focus:ring-purple-500 focus:outline-none"/>
            <span asp-validation-form="Category" class="text-smt ext-red-600"></span>
        </div>

        <div>
            <label asp-for="Priority" class="block font-medium text-purple-800">Priority</label>
            <select asp-for="Priority" class="w-full mt-1 px-4 py-2 border border rounded focus:ring-purple-500 focus:outline-none">
            <option value="">Select Priority</option>
            @foreach (var priority in Enum.GetValues(typeof(Priority)))
            {
                <option value="@priority">@priority</option>
            }
            </select>
            <span asp-validation-for="Priority" class="text-sm text-red-600"></span>
        </div>


        <div class="flex justify-end gap-4 pt-4">
            <a asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-4 rounded-lg transition">Cancel</a>
            <button type="submit" class="bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded-lg transition">Save Task</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model TodoList.Models.TodoItem

@{
    ViewData["Title"] = "Delete";
}

<div class="max-w-xl mx-auto mt-10 bg-gradient-to-br from-purple-100 to-white shadow-xl rounded-xl p-8">
    <h2 class="text-2xl font-bold text-purple-700 mb-6">Confirm Delete.</h2>

    <div class="mb-4">
        <p class="text-lg-center text-gray-800">Are you sure you want to delete this task?</p>
    </div>


    <div class="mb-4 p-4 border border-purple-200 rounded bg-white shadow-sm">
        <p><span class="font-semibold text-purple-700">Title:</span> @Model.Title</p>
        <p><span class="font-semibold text-purple-700">Category:</span> @Model.Category</p>
        <p><span class="font-semibold text-purple-700">Priority:</span> @Model.Priority</p>
    </div>


    <form asp-action="Delete" methood="post">
        <input type="hidden" asp-for="Id" />

        <div class="flex justify-end gap-4">
            <a asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-4 rounded-lg transition">Cancel</a>
            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg transition">
                Delete Task
            </button>
        </div>
    </form>
</div>

